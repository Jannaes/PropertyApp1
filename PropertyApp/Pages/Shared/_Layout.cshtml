    @* flatpickr JS loaded once for the whole app *@
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <script>
        // Initialize flatpickr instances on inputs[type="date"].
        // Default configuration: post ISO date (Y-m-d) while showing dd.mm.Y to user.
        document.addEventListener('DOMContentLoaded', function () {
            if (typeof flatpickr === 'undefined') return;

            // select native date inputs that are visible
            var dateInputs = Array.from(document.querySelectorAll('input[type="date"]')).filter(function(el) {
                // ignore inputs already replaced by flatpickr (flatpickr sets _flatpickr)
                return !el._flatpickr;
            });

            dateInputs.forEach(function (el) {
                // preserve attributes needed for server binding (name, id)
                flatpickr(el, {
                    dateFormat: 'Y-m-d',    // value posted to server (ISO)
                    altInput: true,         // show alternate input to user
                    altFormat: 'd.m.Y',     // visible format: 31.12.2025
                    allowInput: true,
                    defaultDate: el.value && el.value.length ? el.value : null
                });
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

