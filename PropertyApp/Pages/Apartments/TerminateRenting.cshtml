@page "{id:int}"
@model PropertyApp.Pages.Apartments.TerminateRentingModel

@{
    ViewData["Title"] = "TerminateRenting";
}

<h1>Edit Rental agreement</h1>

@* <div class="mb-2">
    <strong>Contract debug:</strong>
    <div>Id: @(Model.TenantContract?.Id ?? 0)</div>
    <div>IdApartment: @(Model.TenantContract?.IdApartment ?? 0)</div>
    <div>IdUser: @(Model.TenantContract?.IdUser ?? 0)</div>
    <div>UserRole: @(Model.TenantContract?.UserRole ?? "—")</div>
</div> *@

@* Render ModelState errors for debugging *@
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-warning">
        <h6>ModelState errors</h6>
        <ul>
            @foreach (var entry in ViewData.ModelState)
            {
                var key = entry.Key;
                var errors = entry.Value.Errors;
                if (errors != null && errors.Count > 0)
                {
                    foreach (var err in errors)
                    {
                        var msg = !string.IsNullOrEmpty(err.ErrorMessage) ? err.ErrorMessage : (err.Exception?.Message ?? "[error]");
                        <li><strong>@key</strong>: @msg</li>
                    }
                }
            }
        </ul>
    </div>
}

<h5>Apartment</h5>
<hr />

<div class="mb-3">
    @* <strong>Property:</strong> *@
    <div>
        <div>@(Model.Property?.Name ?? "—")</div>
        <div class="text-muted">@Model.Property?.Streetname @Model.Property?.Streetnumber @if(!string.IsNullOrWhiteSpace(Model.Apartment?.StaircaseDoor)){<span> @Model.Apartment.StaircaseDoor</span>}</div>
        <div class="text-muted">@Model.Property?.Postcode @Model.Property?.PostOfficeName</div>
    </div>
</div>

<h5>Landlord:</h5>
<hr />
<div class="mb-3">
    @if (Model.OwnerCurrent != null)
    {
        <div>@Model.OwnerCurrent.Firstname @Model.OwnerCurrent.Lastname</div>
    }
    else
    {
        <div class="text-muted">—</div>
    }
</div>

<h5>Tenant:</h5>
<hr />
<div class="mb-3">
    @if (Model.TenantCurrent != null)
    {
        <div>@Model.TenantCurrent.Firstname @Model.TenantCurrent.Lastname</div>
    }
    else
    {
        <div class="text-muted">—</div>
    }
</div>

<h4>Contract dates</h4>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Hidden fields so the TenantContract can be updated on POST *@
            <input type="hidden" asp-for="TenantContract.Id" />
            <input type="hidden" asp-for="TenantContract.IdApartment" />
            <input type="hidden" asp-for="TenantContract.IdUser" />
            <input type="hidden" asp-for="TenantContract.UserRole" />
            @* <input type="hidden" asp-for="TenantContract.IdUserNavigation" />
            <input type="hidden" asp-for="TenantContract.IdApartmentNavigation" /> *@

            @* Ensure ApartmentId is posted back so ApartmentId is valid on POST *@
            <input type="hidden" asp-for="ApartmentId" />

            <div class="mb-3">
                <label asp-for="TenantContract.FromDate" class="form-label">From</label>
                <input asp-for="TenantContract.FromDate" type="date" class="form-control" />
                <span asp-validation-for="TenantContract.FromDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TenantContract.EndDate" class="form-label">End</label>
                <input asp-for="TenantContract.EndDate" type="date" class="form-control" />
                <span asp-validation-for="TenantContract.EndDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-page="./Details" asp-route-id="@Model.Apartment.IdApartment" class="btn btn-secondary ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
