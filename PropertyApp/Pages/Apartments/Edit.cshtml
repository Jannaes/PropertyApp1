@page
@model PropertyApp.Pages.Apartments.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Apartment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Apartment.IdApartment" />
            <div class="form-group">
                
                <label asp-for="Apartment.IdProperty" class="control-label"></label>
                <select asp-for="Apartment.IdProperty" class="form-control" asp-items="ViewBag.IdProperty"></select>
                <span asp-validation-for="Apartment.IdProperty" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Apartment.StaircaseDoor" class="control-label"></label>
                <input asp-for="Apartment.StaircaseDoor" class="form-control" />
                <span asp-validation-for="Apartment.StaircaseDoor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
